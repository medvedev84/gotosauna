<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gotosauna"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".util.GlobalStore" >
        <activity
            android:name=".GotosaunaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.list.SaunaListActivity" android:screenOrientation="user"></activity>
        <activity android:name=".activity.list.CityListActivity" android:screenOrientation="user"></activity>
        <activity android:name=".activity.search.SaunaSearchActivity" android:screenOrientation="user"></activity>
        <activity android:name=".activity.show.SaunaShowActivity" android:screenOrientation="user"></activity>    
        <activity android:name=".activity.photo.SaunaPhotosActivity" android:screenOrientation="user"></activity>        
    </application>

</manifest>